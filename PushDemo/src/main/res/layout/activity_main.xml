<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_basic_info"
        android:layout_margin="8dip"
        android:layout_width="match_parent"
        android:layout_height="40dip"/>
    <TextView
        android:id="@+id/tv_log_area"
        android:layout_margin="8dip"
        android:padding="3dip"
        android:layout_below="@id/tv_basic_info"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_height="100dip"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_log_area">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="2dip"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/layout_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_top"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_register"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订阅"/>

                <Button
                    android:id="@+id/btn_unregister"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取消订阅"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_alias_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_top"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_register">
                <Button
                    android:id="@+id/btn_set_alias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="别名订阅"/>
                <Button
                    android:id="@+id/btn_unset_alias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="取消别名订阅"/>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
